# General Configuration
NODE_ENV=development

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=qbit-accounting

# Service Discovery
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Logging
LOG_LEVEL=info
LOGSTASH_URL=localhost:5000

# Message Queue
RABBITMQ_URL=amqp://qbit:qbit_password@rabbitmq:5672
RABBITMQ_USER=qbit
RABBITMQ_PASSWORD=qbit_password

# Security
JWT_SECRET=dev-jwt-secret-key-change-in-production
SERVICE_JWT_SECRET=dev-service-jwt-secret-key-change-in-production
JWT_EXPIRATION=1d 