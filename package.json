{
  "name": "qbit-accounting-system",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:unit": "jest --testPathPattern=\\.(spec|test)\\.ts$",
    "test:integration": "jest --testPathPattern=\\.integration\\.test\\.ts$ --runInBand",
    "test:e2e": "jest --testPathPattern=\\.e2e\\.test\\.ts$ --runInBand",
    "type-check": "turbo run type-check --filter=!@qbit/utils --filter=!@qbit/auth-common --filter=!@qbit/events --filter=!@qbit/logging --filter=!@qbit/api-client",
    "prisma:seed": "ts-node --project prisma/tsconfig.json prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node --project prisma/tsconfig.json prisma/seed.ts"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.2",
    "@types/passport": "^1.0.17",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "sass": "^1.87.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig": "*",
    "turbo": "latest",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.18.1"
  },
  "packageManager": "yarn@3.7.0",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "next": "^15.3.1",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "resolutions": {
    "typescript": "5.3.3"
  }
}
