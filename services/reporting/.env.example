# Database configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/qbit_reporting?schema=public"

# App configuration
PORT=3004
NODE_ENV=development

# Auth configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=1d
SERVICE_JWT_SECRET=your_service_jwt_secret_here

# RabbitMQ configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE_NAME=reporting_queue
RABBITMQ_EXCHANGE=reporting_exchange

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
GENERAL_LEDGER_SERVICE_URL=http://localhost:3002

# Service Authentication
SERVICE_ID=reporting-service
SERVICE_SECRET=your_service_secret_here

# HTTP Client configuration
HTTP_TIMEOUT=5000
HTTP_MAX_REDIRECTS=5 